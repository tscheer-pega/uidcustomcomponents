{
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.json"
  ],
  "exclude": [
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.js",
    "./src/**/*.stories.jsx",
    "./src/**/*.stories.json"
  ],
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib"
  }
}
